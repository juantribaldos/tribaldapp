<body>
<div>
  <header class="main" id="h1">  
		<% if(!session.user) { %>
					<span class="right"><a href="/login">Login</a></span>
				<% } else { %>
					<span class="right"><%= session.user.username %> <a href="/logout">Logout</a></span>
				<% } %>  
    <h2>Prenda<span>: Base de imágenes</span></h2>
  </header>
  <nav class="main" id="n1" role="navigation">
	<span><a href="/">Inicio</a></span>
    <span><a href="/prendas">Preguntas</a></span>
  </nav>
  <section class="main" id="s1">
	<% if (errors.length) { %>
      <span id='ErrorMsgs'>
        Corregir errores:<br/>
        <% for (var i in errors) { %>
           <span> <%= errors[i].message %> </span><br/>
        <% } %>
      </span>
    <% } %> 
	 
	  
    <div><%- body %></div>
  </section>
  <footer class="main" id="f1">
	 
    <!--<a href="http://es.wikipedia.org/wiki/Quiz">
      ¿Que es un Quiz?</a>  -->
      
      
  </footer>
   
</div>
			
</body>
</html>


